<%- include('partials/header') -%>

    <div class="flex">
        <div class="container home">
            <div class="form-content">
                <div class="content">
                    <h1 class="head">Stay updated!</h1>
                    <p class="desc">Join 60,000+ product managers receiving monthly updates on:</p>
                    <ul class="features">
                        <li class="item">Product discovery and building what matters</li>
                        <li class="item">Measuring to ensure updates are a success</li>
                        <li class="item">And much more!</li>
                    </ul>
                </div>

                <form action="/" method="post">
                    <div class="input">
                        <div class="msg">
                            <label for="email">Email Address</label>
                            <p class="err"><%= error %></p>
                        </div>
                        <input type="email" placeholder="email@company.com" name="email" id="email" autocomplete="none" aria-errormessage="none">
                    </div>
                    <button type="submit" class="subs btn">Subscribe to monthly newsletter</button>
                </form>
            </div>

            <img src="images/illustration-sign-up-desktop.svg" alt="illustration-sign-up-desktop" class="illus">
        </div>
    </div>
    
<%- include('partials/footer') -%>